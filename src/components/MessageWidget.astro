<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Referencias a elementos del DOM
    const userDataForm = document.getElementById(
      "userDataForm"
    ) as HTMLFormElement;
    const chatWindow = document.getElementById("chatWindow");
    const chatButton = document.getElementById("chatButton");
    const closeChat = document.getElementById("closeChat");
    const userPhoneElement = document.getElementById(
      "userPhone"
    ) as HTMLInputElement;

    // FunciÃ³n para cerrar el widget de chat
    function closeChatWidget() {
      if (chatWindow) chatWindow.style.display = "none";
      if (chatButton) chatButton.style.display = "flex";
    }

    // FunciÃ³n para validar el nÃºmero de telÃ©fono
    function validatePhone(phone) {
      return /^\d{10}$/.test(phone);
    }
    // Evento de validaciÃ³n en tiempo real para el nÃºmero de telÃ©fono
    userPhoneElement.addEventListener("input", function () {
      if (validatePhone(userPhoneElement.value)) {
        userPhoneElement.classList.add("valid"); // AÃ±ade una clase para indicar que el valor es vÃ¡lido
        userPhoneElement.classList.remove("invalid"); // Elimina la clase de invalid si estaba previamente
      } else {
        userPhoneElement.classList.add("invalid"); // AÃ±ade una clase para mostrar visualmente un error
        userPhoneElement.classList.remove("valid"); // Elimina la clase de vÃ¡lido si estaba previamente
      }
    });

    // Evento para manejar el cierre del chat
    if (closeChat) {
      closeChat.addEventListener("click", closeChatWidget);
    }

    // Evento para manejar la apertura del chat
    if (chatButton && chatWindow) {
      chatButton.addEventListener("click", function () {
        chatWindow.style.display = "block";
        chatButton.style.display = "none";
      });
    }

    // Evento para manejar el envÃ­o del formulario
    if (userDataForm) {
      userDataForm.addEventListener("submit", function (event) {
        event.preventDefault();

        // Acceso a los elementos del formulario usando TypeScript casting
        const userNameElement = document.getElementById(
          "userName"
        ) as HTMLInputElement;
        const userMessageElement = document.getElementById(
          "userMessage"
        ) as HTMLInputElement;

        if (!userNameElement || !userPhoneElement || !userMessageElement) {
          alert("Por favor, complete todos los campos.");
          return;
        }
        const userName = userNameElement.value;
        const userPhone = userPhoneElement.value;
        const userMessage = userMessageElement.value;
        // ConstrucciÃ³n del mensaje para WhatsApp
        if (userName && userPhone && userMessage) {
          const whatsappMessage = `Hola, mi nombre es ${userName}. Mi nÃºmero de telÃ©fono es ${userPhone}. ${userMessage}`;
          const whatsappUrl = `https://wa.me/593987077332?text=${encodeURIComponent(whatsappMessage)}`;

          // Abrir WhatsApp
          window.open(whatsappUrl, "_blank");

          // Resetear formulario
          userDataForm.reset();

          // Cerrar el widget
          closeChatWidget();
        }
      });
    }
  });
</script>
